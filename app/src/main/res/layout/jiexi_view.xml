<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:id="@+id/sc"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/dati_down"
        android:layout_below="@+id/dati">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:id="@+id/linear_timu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/TextView_timu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:textColor="@color/black"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    />

                <ImageView
                    android:id="@+id/imageview_timuleixing"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:scaleType="fitXY"
                    android:layout_weight="10" />
            </LinearLayout>

            <ListView
                android:id="@+id/gview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="#00000000"
                android:dividerHeight="10dp"
                android:layout_margin="20dp"
                >
            </ListView>
            <LinearLayout
                android:id="@+id/linear_daanxuanxiang"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryGreen"
                    android:textSize="18dip"
                    android:text="答案 :"
                    />
                <TextView
                    android:id="@+id/textview_daanxuanxiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryGreen"
                    android:textSize="18dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_jiexi"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>